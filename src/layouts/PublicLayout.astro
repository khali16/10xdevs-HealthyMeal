---
import Layout from '@/layouts/Layout.astro'
import { ClientRouter } from 'astro:transitions'

interface Props {
  title: string
}

const { title } = Astro.props
---

<Layout title={title}>
  <ClientRouter />
  <div class="flex min-h-screen flex-col bg-background text-foreground">
    <header class="border-b bg-background">
      <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
        <a href="/recipes" class="flex items-center gap-2 text-lg font-semibold text-foreground">
          <img
            src="/favicon.png"
            alt="HealthyMeal logo"
            class="h-8 w-8"
            loading="lazy"
            decoding="async"
          />
          <span>HealthyMeal</span>
        </a>
        <nav class="flex items-center gap-3 text-sm text-muted-foreground">
          <a class="transition-colors hover:text-foreground" href="/auth/login">Zaloguj</a>
          <a class="transition-colors hover:text-foreground" href="/auth/register">Załóż konto</a>
          <a class="transition-colors hover:text-foreground" href="/auth/forgot-password">Nie pamiętam hasła</a>
        </nav>
      </div>
    </header>
    <main class="flex-1">
      <slot />
    </main>
  </div>
</Layout>
