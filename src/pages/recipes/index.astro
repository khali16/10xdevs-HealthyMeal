---
import Layout from '@/layouts/Layout.astro'
import RecipesListPage from '@/components/recipes/RecipesListPage'

const { user } = Astro.locals
if (!user) {
  const returnTo = `${Astro.url.pathname}${Astro.url.search}`
  return Astro.redirect(`/auth/login?returnTo=${encodeURIComponent(returnTo)}`)
}
---

<Layout title="Przepisy">
  <main class="min-h-screen bg-background text-foreground">
    <RecipesListPage client:load />
  </main>
</Layout>

